<MudThemeProvider />

<MudLayout>
    <MudAppBar Style="@($"background-color:{Colors.Red.Accent2};")" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <div style="color: white;">
            <MudButton style="color: white;" Edge="Edge.End" Link="/login">Se connecter</MudButton>
            <MudButton style="color: white;" Edge="Edge.End" Link="/signin">S'inscrire</MudButton>
        </div>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudDivider Class="my-2" />
            <img src="assets/logo.png" asp-append-version="true" width="100px" style="margin: auto;" />
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink style="display: flex;align-items: flex-start;" Href="/home">
                <div style="display: flex;align-items: flex-start;">
                    <MudIcon Icon="@Icons.Material.Filled.Home" Title="Home"
                        Style="@($"color:{Colors.Red.Accent2};flex:1;")" />
                    <div class="nav-link-text">Accueil</div>
                </div>
            </MudNavLink>
            <MudNavGroup Title="Les Bières">
                <MudNavLink Href="/beers/all">toutes les bières</MudNavLink>
                <MudNavLink Href="/beers/ipa">IPA</MudNavLink>
                <MudNavLink Href="/beers/blonde">Blonde</MudNavLink>
                <MudNavLink Href="/beers/neipa">New England IPA</MudNavLink>
                <MudNavLink Href="/beers/triple">Triple</MudNavLink>
                <MudNavLink Href="/beers/blonde">Blonde</MudNavLink>
                <MudNavLink Href="/beers/south">South</MudNavLink>
            </MudNavGroup>

            <MudNavLink Href="/fetchdata">Recherche</MudNavLink>
            <MudNavLink Href="/form-beer">Crée ta biere !</MudNavLink>
        </MudNavMenu>
        @*NavMenu*@
    </MudDrawer>
    <udMainContent>
        @*Body*@
    </udMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
